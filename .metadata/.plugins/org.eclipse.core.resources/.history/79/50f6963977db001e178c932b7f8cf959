package FirstProject.MavenPrograms;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

import io.github.bonigarcia.wdm.WebDriverManager;

public class calendar {

	public static void main(String[] args) throws InterruptedException {
		// TODO Auto-generated method stub
		WebDriverManager.chromedriver().setup();
		WebDriver driver = new ChromeDriver();

		driver.manage().window().maximize();
		driver.get("https://rahulshettyacademy.com/dropdownsPractise/");
		Thread.sleep(3000);
		
		System.out.println("Testing");

		String header = driver.findElement(By.cssSelector("div[id='select-class-example'] legend")).getText();
		if (header.equalsIgnoreCase("country")) {
			System.out.println("Header verified: " + header);
		}
		WebElement roundtrip = driver.findElement(By.cssSelector("input[id='ctl00_mainContent_rbtnl_Trip_1']"));
		roundtrip.click();

		Thread.sleep(1000);
		driver.findElement(By.cssSelector("input[id='ctl00_mainContent_view_date1']~button")).click();

		for (int i = 0; i < 2; i++) {
			driver.findElement(By.cssSelector("span[class='ui-icon ui-icon-circle-triangle-e']")).click();
		}

		String frommonth = driver
				.findElement(
						By.cssSelector("div[class*='ui-datepicker-group-first'] span[class='ui-datepicker-month']"))
				.getText();
		System.out.println(frommonth);
			if(frommonth.equalsIgnoreCase("march")) {
				List<WebElement> fromdates = driver.findElements(
						By.cssSelector("div[class='ui-datepicker-group ui-datepicker-group-first'] tbody tr td"));
				Thread.sleep(2000);
				for (WebElement element : fromdates) {
					if (element.getText().equals("29")) {
						element.click();
						break;
					}
				}

		}
		driver.findElement(By.cssSelector("input[id='ctl00_mainContent_view_date2']~button")).click();
		Thread.sleep(1000);
		for (int i = 0; i < 2; i++) {
			driver.findElement(By.cssSelector("span[class='ui-icon ui-icon-circle-triangle-e']")).click();
		}

		String tomonth = driver
				.findElement(
						By.cssSelector("div[class*='ui-datepicker-group-first'] span[class='ui-datepicker-month']"))
				.getText();
		System.out.println(tomonth);
		if (tomonth.equalsIgnoreCase("may")) {
			List<WebElement> dates = driver.findElements(
					By.cssSelector("div[class='ui-datepicker-group ui-datepicker-group-first'] tbody tr td"));
			Thread.sleep(2000);
			for (WebElement element : dates) {
				if (element.getText().equals("8")) {
					element.click();
					break;
				}
			}

		}

	}

}
